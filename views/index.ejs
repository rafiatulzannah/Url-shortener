<body>
  
    <div class="container">
    <div class=text-box>
        <h1 class="heading"> URL SHORTENER</h1>
    </div>
   

    <form action="/shortUrls" method="POST" class="form-style">
        <div class="input-group mb-3">
            <label for="fullUrl" class="visually-hidden"> Url </label>
            <input required type="url" name="fullUrl" id="fullUrl" class="form-control" placeholder="Url" aria-describedby="button-addon2">
            <button class="btn btn-info" type="submit" id="button-addon2">Shorten</button>
          </div>
    </form>
    <table class="table table-dark table-hover table-striped table-responsive">
        <thead>
            <tr>
                <th>Full Url</th>
                <th>Short Url</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td>
                  <a style="color:white; text-decoration:none" href=" <%= shortUrl.full %>"> <%= shortUrl.full %> </a>
              </td>
              <td> <a style="color:white; text-decoration:none" href="<%= shortUrl.short %>"><%= shortUrl.short %></a> </td>
              <td><%= shortUrl.clicks %></td>
          </tr>
          <% }); %>
            
        </tbody>
    </table>    
